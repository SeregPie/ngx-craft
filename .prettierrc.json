{
	"plugins": ["prettier-plugin-organize-imports"],

	"bracketSpacing": false,
	"htmlWhitespaceSensitivity": "strict",
	"printWidth": 240,
	"singleAttributePerLine": true,
	"singleQuote": true,
	"useTabs": true,

	"overrides": [
		{
			"files": "*.md",
			"options": {
				"useTabs": false
			}
		}
	]
}
